<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CEE Lab Equipment - QR Codes</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .equipment-card {
            transition: transform 0.2s;
        }
        .equipment-card:hover {
            transform: translateY(-5px);
        }
        .qr-code {
            max-width: 150px;
            height: auto;
        }
        .status-active {
            color: #28a745;
        }
        .status-inactive {
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="container mt-4">
        <div class="row">
            <div class="col-12">
                <h1 class="text-center mb-4">CEE Lab Equipment Check-in System</h1>
                <p class="text-center text-muted">Scan the QR code on any equipment to check in</p>
                <div class="text-center mb-4">
                    <a href="/admin" class="btn btn-primary">Admin Panel</a>
                </div>
            </div>
        </div>

        <div class="row">
            <% equipment.forEach(function(item) { %>
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card equipment-card h-100">
                        <div class="card-body">
                            <h5 class="card-title"><%= item.name %></h5>
                            <p class="card-text">
                                <strong>Lab:</strong> <%= item.lab %><br>
                                <strong>Model:</strong> <%= item.model || 'N/A' %><br>
                                <strong>Serial:</strong> <%= item.serialNumber %><br>
                                <strong>Category:</strong> <%= item.category || 'N/A' %><br>
                                <strong>Status:</strong> 
                                <span class="<%= item.status === 'Active / In Use' ? 'status-active' : 'status-inactive' %>">
                                    <%= item.status || 'Not specified' %>
                                </span>
                            </p>
                            <div class="text-center">
                                <img src="<%= item.qrCode %>" alt="QR Code for <%= item.name %>" class="qr-code img-fluid">
                                <p class="small text-muted mt-2">Scan to check in</p>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
